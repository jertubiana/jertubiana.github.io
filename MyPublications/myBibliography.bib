	journal = {PLOS Computational Biology},
	author = {Tubiana, Jérôme and Adriana-Lifshits, Lucia and Nissan, Michael and Gabay, Matan and Sher, Inbal and Sova, Marina and Wolfson, Haim J. and Gal, Maayan},
	month = feb,
