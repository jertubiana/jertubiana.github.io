	author = {Nagar, Natan and Tubiana, Jérôme and Loewenthal, Gil and Wolfson, Haim J. and Ben Tal, Nir and Pupko, Tal},
	month = jul,
	year = {2023},
	keywords = {deep learning, mutation, protein evolution, protein function, protein structure},
	pages = {168155},
	file = {Nagar et al. - 2023 - EvoRator2 Predicting Site-specific Amino Acid Sub.pdf:/Users/jerometubiana/Zotero/storage/364VE24Y/Nagar et al. - 2023 - EvoRator2 Predicting Site-specific Amino Acid Sub.pdf:application/pdf},
